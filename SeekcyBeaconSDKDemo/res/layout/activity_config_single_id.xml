<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/state_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textColor="@android:color/holo_red_dark" />

        <RelativeLayout
            android:id="@+id/config_rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/state_info"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/config_uuid_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="7dp"
                android:text="UUID "
                android:textSize="15dp" />

            <EditText
                android:id="@+id/config_uuid1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/config_uuid_view1"
                android:hint="00000000-0000-0000-0000-000000000000"
                android:singleLine="true"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/config_uuid_spinner1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:textSize="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/config_rl2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/config_rl1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/config_major_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:text="Major"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/config_major1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/config_major_view1"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/config_minor_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:text="Minor"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/config_minor1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/config_minor_view1"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/config_rl3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/config_rl2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/config_measured_power_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:text="MeasuredPower"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/config_measured_power1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/config_measured_power_view1"
                    android:inputType="numberSigned"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/config_txpower_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:text="TxPower"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/config_txpower1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/config_txpower_view1"
                    android:inputType="numberSigned"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/config_interval_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="发送间隔ms "
                android:textSize="15dp" />

            <EditText
                android:id="@+id/config_interval"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/config_interval_view"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/config_key_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="防篡改密钥 "
                android:textSize="15dp" />

            <EditText
                android:id="@+id/config_key"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/config_key_view"
                android:inputType="text"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/config_device_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="设备名称 "
                android:textSize="15dp" />

            <EditText
                android:id="@+id/config_device_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/config_device_name_view"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/config_lock_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="防篡改模式 "
                android:textSize="15dp" />

            <com.skybeacon.demo.widget.CheckSwitchButton
                android:id="@+id/config_lock_switchbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="false"
                android:enabled="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/config_led_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Led状态 "
                android:textSize="15dp" />

            <EditText
                android:id="@+id/config_led"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/config_led_view"
                android:hint="不变"
                android:singleLine="true"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/config_led_spinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:textSize="15dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/config_command"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="#2F8f8f8f"
            android:clickable="true"
            android:onClick="onClick"
            android:text="配置"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>